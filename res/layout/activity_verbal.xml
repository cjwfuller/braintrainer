<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="22sp"
      android:layout_marginRight="22sp"
      android:layout_marginBottom="22sp"
      android:orientation="vertical"
      android:layout_centerInParent="true" >
	<LinearLayout
	    android:id="@+id/layout0"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="22sp"
        android:layout_marginRight="22sp" >
	    <TextView
           android:id="@+id/verbal_instructions"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="@string/verbal_instructions_text"
           android:textSize="40sp"
           android:textStyle="bold" /> 
	</LinearLayout>
	<LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout0"
        android:layout_centerInParent="true" >
        <TextView
            android:id="@+id/verbal_letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp" /> 
    </LinearLayout>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_above="@+id/layout2"
	    android:layout_marginLeft="22sp"
        android:layout_marginRight="22sp" >    
	    <Button
	        android:id="@+id/category1_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="invisible"
	        android:background="@drawable/btn_green"
	        style="@style/ButtonText"
	        android:width="150sp"
	        android:layout_gravity="center"
	        android:textSize="40sp" />
	   <Button
	       android:id="@+id/category2_button"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:visibility="invisible"
	       android:background="@drawable/btn_green"
	       style="@style/ButtonText"
	       android:width="150sp"     
	       android:layout_gravity="center"
	       android:textSize="40sp" />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="22sp"
        android:layout_marginRight="22sp"
        android:layout_alignParentBottom="true" >  
       <Button
           android:id="@+id/category3_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:visibility="invisible"
           android:background="@drawable/btn_green"
           style="@style/ButtonText"
           android:width="150sp"      
           android:layout_gravity="center"
           android:textSize="40sp" />
       <Button
           android:id="@+id/category4_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:visibility="invisible"
           android:background="@drawable/btn_green"
           style="@style/ButtonText"
           android:width="150sp"
           android:layout_gravity="center"
           android:textSize="40sp" />
    </LinearLayout>
</RelativeLayout>