<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appanddone.braintrainer"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <supports-screens
                  android:smallScreens="true"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  android:xlargeScreens="true"
                  android:anyDensity="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".BrainTrainer" >
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.appanddone.braintrainer.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Settings"
            android:label="@string/activity_title_settings" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.About"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Memory"
            android:label="@string/title_activity_memory"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Mathematics"
            android:label="@string/title_activity_mathematics"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Verbal"
            android:label="@string/title_activity_verbal"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.PatternRecognition"
            android:label="@string/title_activity_pattern_recognition"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Logic"
            android:label="@string/title_activity_logic"
            android:screenOrientation="portrait" >
        </activity>                   
        <activity
            android:name="com.appanddone.braintrainer.Spatial"
            android:label="@string/title_activity_spatial"
            android:screenOrientation="portrait" >
        </activity> 
        <activity
            android:name="com.appanddone.braintrainer.Visual"
            android:label="@string/title_activity_visual"
            android:screenOrientation="portrait" >
        </activity> 
        <activity
            android:name="com.appanddone.braintrainer.Classification"
            android:label="@string/title_activity_classification"
            android:screenOrientation="portrait" >
        </activity>     
        <activity
            android:name="com.appanddone.braintrainer.CheckAnswer"
            android:label="@string/title_check_answer"
            android:screenOrientation="portrait" >            
        </activity>
        <activity
            android:name="com.appanddone.braintrainer.Finish"
            android:label="@string/title_activity_finish"
            android:screenOrientation="portrait" >            
        </activity>
        <activity android:name="com.google.android.gms.ads.AdActivity"
             android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>
  
</manifest>
